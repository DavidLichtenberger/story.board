!!! 5
%html(lang="en")
  %head

    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "story.board"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag href="https://fonts.googleapis.com/css?family=Roboto", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"


  %body
    .navbar.navbar-default.navbar-static-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
        %img{:src => asset_path("storyboard_logo.png"),:class => "logostyle"}
        %span.glyphicon.glyphicon-user 
        %em  Sign in
        %p
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav
            %li= link_to "Text Components", text_components_path
            %li= link_to "Sensors", sensors_path
            %li= link_to "Events", events_path
            %li= link_to "Actuators", actuators_path
            %li= link_to "Chains", chains_path
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Settings
                %span.caret
              %ul.dropdown-menu
                - Report.find_each do |report|
                  %li
                    %a{:href => report_path(report)}=report.name

    .container
      .row
        .col-lg-9
          = bootstrap_flash
          = yield
        .col-lg-3
          .generatemenu.well.sidebar-nav
            %h3 Generate Reports
            %ul.nav.nav-list
              %li.nav-header Take a look at the Sensor-Live-Report as your readers will see it.
              %p
              =link_to "/reports/current?preview=true", {:class => "btn btn-primary btn-lg"} do
                %span.glyphicon.glyphicon-play-circle
                Preview Test-System
              =link_to "/reports/current", {:class => "btn btn-primary btn-lg"} do
                %span.glyphicon.glyphicon-play-circle
                Live-System
              
              
      %footer
        %p
        %strong No Reporters Were Harmed.
        %p &copy; Dr. Jakob Vicari, www.sensor-live-reportage.de – Unterstützt durch Mittel des
        %img{:src => asset_path("miz-logo_v0_schrift_unten_WEISS.png")}
