<p>
  <strong>Name:</strong>
    <%= @sensor.name%>
</p>
<p>
  <strong>Address:</strong>
    <%= @sensor.address%>
</p>
<p>
  <strong>Property:</strong>
    <%= @sensor.property %> (<%= @sensor.unit%>)
</p>


<h1>Sensor Readings</h1>
<table>
  <tr>
    <th>Timestamp</th>
    <th>Calibrated Value</th>
    <th>Uncalibrated Value</th>
  </tr>
 
  <% @sensor.sensor_readings.each do |reading| %>
    <tr>
      <td><%= reading.created_at %></td>
      <td><%= reading.calibrated_value %></td>
      <td><%= reading.uncalibrated_value %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'Edit', edit_sensor_path(@sensor) %>
<%= link_to 'Destroy', sensor_path(@sensor), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', sensors_path %>
