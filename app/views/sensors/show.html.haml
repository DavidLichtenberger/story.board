%p
  %strong Name:
  = @sensor.name
%p
  %strong Address:
  = @sensor.address
%p
  %strong Property:
  = @sensor.property
  (#{@sensor.unit})
%h1 Sensor Readings
%table
  %tr
    %th Timestamp
    %th Calibrated Value
    %th Uncalibrated Value
  - @sensor.sensor_readings.each do |reading|
    %tr
      %td= reading.created_at
      %td= reading.calibrated_value
      %td= reading.uncalibrated_value
= link_to 'Edit', edit_sensor_path(@sensor)
= link_to 'Destroy', sensor_path(@sensor), method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'Back', sensors_path
