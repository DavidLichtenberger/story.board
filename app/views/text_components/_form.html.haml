%h1 Edit Text Component
%hr
%strong Edit your text component titled »#{@text_component.heading}«. Kill your darlings!
%hr
= simple_form_for @text_component do |f|
  = f.error_notification
  .form-inputs
    .textcomponent.well
      %h3 Conditions
      %h4 Event Conditions
      #events
        = f.association :events, as: :check_boxes, label_method: :name_and_id
      %h4 Sensor Conditions
      #conditions
        = f.simple_fields_for :conditions do |condition|
          = render 'condition_fields', f: condition
        .links
          = link_to_add_association "add condition", f, :conditions
    .textcomponent.well
      %h3 Text
      = f.association :report, :as => :hidden, :input_html => {:value => Report.current.id }
      = f.input :heading
      = f.input :introduction
      = f.input :main_part
      = f.input :closing
      %hr
    .textcomponent.well
      %h3 Behavior
      = f.input :priority, as: :radio_buttons, collection: TextComponent.priorities.keys
      = f.input :timeliness_constraint, hint: "Text component will be triggered for sensor readings within the last X hours"
      %hr

  .form-actions
    = f.submit class:'btn btn-primary btn-md'




