= simple_form_for(@text_component) do |f|
  = f.error_notification

  .form-inputs
    = f.association :report, :as => :hidden, :input_html => {:value => Report.current.id }
    = f.input :heading
    = f.input :introduction
    = f.input :main_part
    = f.input :closing
    = f.input :from_day
    = f.input :to_day
    #triggers
      = f.association :triggers, label_method: :name

  .form-actions
    = f.button :submit
