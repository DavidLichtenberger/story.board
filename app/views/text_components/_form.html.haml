= form_for @text_component do |f|
  - if @text_component.errors.any?
    #error_explanation
      %h2
        = pluralize(@text_component.errors.count, "error")
        prohibited this text component from being saved:
      %ul
        - @text_component.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :heading
    %br/
    = f.text_field :heading
  %p
    = f.label :introduction
    %br/
    = f.text_area :introduction
  %p
    = f.label :main_part
    %br/
    = f.text_area :main_part
  %p
    = f.label :closing
    %br/
    = f.text_area :closing
  %p
    = f.submit
